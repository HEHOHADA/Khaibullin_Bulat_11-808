@model PostModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<form asp-action="Create" asp-controller="Post">
    <div>
        <div>
            <label asp-for="Name">Type post name</label>
            <input type="text" asp-for="Name"/>
        </div>
        <div>
            <label asp-for="Text">Type post text</label>
            <input type="text" asp-for="Text"/>
        </div>
        <div>
             <button type="submit">Create post</button>
        </div>
    </div>
</form>